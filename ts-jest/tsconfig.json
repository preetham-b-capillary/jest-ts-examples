{
    "exclude": [
      "**/*.test.ts",
    ],
    "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "target": "es6",
      "noImplicitAny": true,
      "moduleResolution": "node",
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": ".",
      "watch": false,
      "strict": true, // allow strict type
      "noEmitOnError": true,// generate omly if there are no errors,
      "types": ["jest", "node"],
      "paths": {
        "*": [
          "node_modules/*"
        ]
      },
    },
    "include": ["index.ts"],
  }